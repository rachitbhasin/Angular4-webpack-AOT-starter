{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitHelpers": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "node"
    ]
  },

  "exclude": [
    "build",
    "dist",
    "node_modules",
    "tmp"
  ],

  "angularCompilerOptions": {
    "genDir": "build",
    "skipMetadataEmit": true
  },

  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
